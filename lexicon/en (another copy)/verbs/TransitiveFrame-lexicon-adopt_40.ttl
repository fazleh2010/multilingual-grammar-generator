@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :to_adopt_40 ;
  lemon:entry    :adopt_40ed ;
  lemon:entry    :form_adopt_40_preposition .

:to_adopt_40 a           lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_adopt_40 ;
  lemon:otherForm      :form_adopt_40s ;
  lemon:otherForm      :form_adopt_40ed ;
  lemon:otherForm      :form_adopt_40perfect ;
  lemon:sense          :adopt_40_sense_1 ;
  lemon:synBehavior    :adopt_40_frame_transitive .

:form_adopt_40 a         lemon:Form ;
  lemon:writtenRep     "adopt"@en ;
  lexinfo:verbFormMood lexinfo:infinitive .

:form_adopt_40s a    lemon:Form ;
  lemon:writtenRep "adopts"@en ;
  lexinfo:person   lexinfo:secondPerson .

:form_adopt_40ed a   lemon:Form ;
  lemon:writtenRep "adopted"@en ;
  lexinfo:tense    lexinfo:past .

:form_adopt_40perfect a   lemon:Form ;
  lemon:writtenRep "adopted"@en ;
  lexinfo:tense    lexinfo:perfect ;
  lexinfo:person   lexinfo:thirdPerson .

:adopt_40_frame_transitive a lexinfo:TransitiveFrame ;
  lexinfo:subject          :adopt_40_subj ;
  lexinfo:directObject     :adopt_40_obj .

:adopt_40_sense_1 a   lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :adopt_40_sense_1 ;
  lemon:reference   <http://dbpedia.org/ontology/currency> ;
  lemon:subjOfProp  :adopt_40_obj ;
  lemon:objOfProp   :adopt_40_subj ;
  lemon:condition   :adopt_40_sense_1_condition .


:adopt_40_sense_1_condition a    lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Country> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Currency> .


:adopt_40_obj lemon:marker :form_adopt_40_preposition .

## Prepositions ##
:form_adopt_40_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "by"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

