@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :mineral_of ;
  lemon:entry    :mineral_of_form_preposition .

:mineral_of a       lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:noun ;
  lemon:canonicalForm  :mineral_of_form ;
  lemon:otherForm  :mineral_of_singular ;
  lemon:otherForm  :mineral_of_plural ;
  lemon:sense          :mineral_of_sense_1 ;
  lemon:synBehavior    :mineral_of_nounpp .

:mineral_of_form a lemon:Form ;
  lemon:writtenRep "Mineral"@en .

:mineral_of_singular a    lemon:Form ;
  lemon:writtenRep "Mineral"@en ;
  lexinfo:number   lexinfo:singular .

:mineral_of_plural a   lemon:Form ;
  lemon:writtenRep "Minerals"@en ;
  lexinfo:number    lexinfo:plural .

:mineral_of_nounpp a        lexinfo:NounPPFrame ;
  lexinfo:copulativeArg        :arg1 ;
  lexinfo:prepositionalAdjunct :arg2 .

:mineral_of_sense_1 a lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping         :mineral_of_sense_1 ;
  lemon:reference           <http://www.w3.org/1999/02/22-rdf-syntax-ns#type> ;
  lemon:subjOfProp          :arg2 ;
  lemon:objOfProp           :arg1 ;
  lemon:condition           :mineral_of_sense_1_condition .

:mineral_of_sense_1_condition a lemon:condition ;
  lemon:propertyDomain  <http://dbpedia.org/ontology/Mineral> ;
  lemon:propertyRange   <http://dbpedia.org/ontology/Mineral> .

:arg2 lemon:marker :mineral_of_form_preposition .
## Prepositions ##
:mineral_of_form_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "of"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

