@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :book_by_40 ;
  lemon:entry    :book_by_40_form_preposition .

:book_by_40 a       lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:noun ;
  lemon:canonicalForm  :book_by_40_form ;
  lemon:otherForm  :book_by_40_singular ;
  lemon:otherForm  :book_by_40_plural ;
  lemon:sense          :book_by_40_sense_1 ;
  lemon:synBehavior    :book_by_40_nounpp .

:book_by_40_form a lemon:Form ;
  lemon:writtenRep "book"@en .

:book_by_40_singular a    lemon:Form ;
  lemon:writtenRep "book"@en ;
  lexinfo:number   lexinfo:singular .

:book_by_40_plural a   lemon:Form ;
  lemon:writtenRep "books"@en ;
  lexinfo:number    lexinfo:plural .

:book_by_40_nounpp a        lexinfo:NounPPFrame ;
  lexinfo:copulativeArg        :arg2_book_by_40 ;
  lexinfo:prepositionalAdjunct :arg1_book_by_40 .

:book_by_40_sense_1 a lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping         :book_by_40_sense_1 ;
  lemon:reference           <http://dbpedia.org/ontology/author> ;
  lemon:subjOfProp          :arg2_book_by_40 ;
  lemon:objOfProp           :arg1_book_by_40 ;
  lemon:condition           :book_by_40_sense_1_condition .

:book_by_40_sense_1_condition a lemon:condition ;
  lemon:propertyDomain  <http://dbpedia.org/ontology/Book> ;
  lemon:propertyRange   <http://dbpedia.org/ontology/Writer> .

:arg1_book_by_40 lemon:marker :book_by_40_form_preposition .
## Prepositions ##
:book_by_40_form_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "by"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

