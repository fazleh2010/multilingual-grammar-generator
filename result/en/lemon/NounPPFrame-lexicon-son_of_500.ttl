@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :son_of_500 ;
  lemon:entry    :son_of_500_form_preposition .

:son_of_500 a       lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:noun ;
  lemon:canonicalForm  :son_of_500_form ;
  lemon:otherForm  :son_of_500_singular ;
  lemon:otherForm  :son_of_500_plural ;
  lemon:sense          :son_of_500_sense_1 ;
  lemon:synBehavior    :son_of_500_nounpp .

:son_of_500_form a lemon:Form ;

:son_of_500_singular a    lemon:Form ;
  lemon:writtenRep "son"@en ;
  lexinfo:number   lexinfo:singular .

:son_of_500_plural a   lemon:Form ;
  lemon:writtenRep "sons"@en ;
  lexinfo:number    lexinfo:plural .

:son_of_500_nounpp a        lexinfo:NounPPFrame ;
  lexinfo:copulativeArg        :arg1_son_of_500 ;
  lexinfo:prepositionalAdjunct :arg2_son_of_500 .

:son_of_500_sense_1 a lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping         :son_of_500_sense_1 ;
  lemon:reference           <http://dbpedia.org/ontology/child> ;
  lemon:subjOfProp          :arg2_son_of_500 ;
  lemon:objOfProp           :arg1_son_of_500 ;
  lemon:condition           :son_of_500_sense_1_condition .

:son_of_500_sense_1_condition a lemon:condition ;
  lemon:propertyDomain  <http://dbpedia.org/ontology/Person> ;
  lemon:propertyRange   <http://dbpedia.org/ontology/Person> .

:arg2_son_of_500 lemon:marker :son_of_500_form_preposition .
## Prepositions ##
:son_of_500_form_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "of"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

