@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :born_in ;
  lemon:entry    :form_born_in_preposition .

:born_in a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_born_in ;
  lemon:otherForm      :form_born_in_past ;
  lemon:sense          :born_in_sense_1 ;
  lemon:synBehavior    :born_in_frame .

:form_born_in a           lemon:Form ;
  lemon:writtenRep     "born"@en ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_born_in a      lemon:Form ;
  lemon:writtenRep "-"@en ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_born_in_past a lemon:Form ;
  lemon:writtenRep  "born"@en ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .


:form_born_inperfect a   lemon:Form ;
  lemon:writtenRep "born"@en ;
  lexinfo:tense    lexinfo:perfect ;
  lexinfo:person   lexinfo:thirdPerson .

:born_in_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :born_in_subj ;
  lexinfo:prepositionalAdjunct :born_in_obj .

:born_in_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :born_in_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/birthPlace> ;
  lemon:subjOfProp  :born_in_obj ;
  lemon:objOfProp   :born_in_subj ;
  lemon:condition   :born_in_sense_1_condition .

:born_in_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Person> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/City> .


:born_in_obj lemon:marker :form_born_in_preposition .

## Prepositions ##
:form_born_in_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "in"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

