@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :surname_of ;
  lemon:entry    :surname_of_form_preposition .

:surname_of a       lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:noun ;
  lemon:canonicalForm  :surname_of_form ;
  lemon:otherForm  :surname_of_singular ;
  lemon:otherForm  :surname_of_plural ;
  lemon:sense          :surname_of_sense_1 ;
  lemon:synBehavior    :surname_of_nounpp .

:surname_of_form a lemon:Form ;
  lemon:writtenRep "Surname"@en .

:surname_of_singular a    lemon:Form ;
  lemon:writtenRep "Surname"@en ;
  lexinfo:number   lexinfo:singular .

:surname_of_plural a   lemon:Form ;
  lemon:writtenRep "Surnames"@en ;
  lexinfo:number    lexinfo:plural .

:surname_of_nounpp a        lexinfo:NounPPFrame ;
  lexinfo:copulativeArg        :arg1 ;
  lexinfo:prepositionalAdjunct :arg2 .

:surname_of_sense_1 a lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping         :surname_of_sense_1 ;
  lemon:reference           <http://www.w3.org/1999/02/22-rdf-syntax-ns#type> ;
  lemon:subjOfProp          :arg2 ;
  lemon:objOfProp           :arg1 ;
  lemon:condition           :surname_of_sense_1_condition .

:surname_of_sense_1_condition a lemon:condition ;
  lemon:propertyDomain  <http://dbpedia.org/ontology/Surname> ;
  lemon:propertyRange   <http://dbpedia.org/ontology/Surname> .

:arg2 lemon:marker :surname_of_form_preposition .
## Prepositions ##
:surname_of_form_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "of"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

