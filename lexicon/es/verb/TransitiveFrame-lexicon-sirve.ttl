@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "es" ;
  lemon:entry    :to_sirve ;
  lemon:entry    :sirveed ;
  lemon:entry    :form_sirve_preposition .

:to_sirve a           lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_sirve ;
  lemon:otherForm      :form_sirves ;
  lemon:otherForm      :form_sirveed ;
  lemon:sense          :sirve_sense_1 ;
  lemon:synBehavior    :sirve_frame_transitive .

:form_sirve a         lemon:Form ;
  lemon:writtenRep     "sirve"@es ;
  lexinfo:verbFormMood lexinfo:infinitive .

:form_sirves a    lemon:Form ;
  lemon:writtenRep "sirve"@es ;
  lexinfo:tense    lexinfo:past ;
  lexinfo:person   lexinfo:thirdPerson .


:form_sirves a    lemon:Form ;
  lemon:writtenRep "sirvió"@es ;
  lexinfo:tense    lexinfo:past ;
  lexinfo:person   lexinfo:thirdPerson .

:form_sirveed a   lemon:Form ;
  lemon:writtenRep "servía"@es ;
  lexinfo:tense    lexinfo:perfect ;
  lexinfo:person   lexinfo:thirdPerson .

:sirve_frame_transitive a lexinfo:TransitiveFrame ;
  lexinfo:subject          :sirve_subj ;
  lexinfo:directObject     :sirve_obj .

:sirve_sense_1 a   lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :sirve_sense_1 ;
  lemon:reference   <http://dbpedia.org/ontology/targetAirport> ;
  lemon:subjOfProp  :sirve_obj ;
  lemon:objOfProp   :sirve_subj ;
  lemon:condition   :sirve_sense_1_condition .


:sirve_sense_1_condition a    lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Airline> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Airport> .

:sirveed a            lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:adjective ;
  lemon:canonicalForm  :form_sirveed_canonical ;
  lemon:otherForm      :form_sirveed_by ;
  lemon:synBehavior    :sirveed_frame_adjectivepp ;
  lemon:sense          :sirveed_ontomap .

:form_sirveed_canonical a lemon:Form ;
  lemon:writtenRep         "sirve"@es .

:form_sirveed_by a    lemon:Form ;
  lemon:writtenRep     "sirve"@es ;
  lexinfo:verbFormMood lexinfo:participle .


:sirveed_frame_adjectivepp a  lexinfo:AdjectivePPFrame ;
  lexinfo:copulativeSubject    :sirveed_subj ;
  lexinfo:prepositionalAdjunct :sirveed_obj .

:sirveed_ontomap a lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :sirveed_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/targetAirport> ;
  lemon:subjOfProp  :sirveed_subj ;
  lemon:objOfProp   :sirveed_obj ;
  lemon:condition   :sirve_sense_1_condition .
:sirveed_obj lemon:marker :por .

:arg2 lemon:marker :form_sirve_form_preposition .

## Prepositions ##

:form_sirve_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "por"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .