@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :color_of_127 ;
  lemon:entry    :color_of_127_form_preposition .

:color_of_127 a       lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:noun ;
  lemon:canonicalForm  :color_of_127_form ;
  lemon:otherForm  :color_of_127_singular ;
  lemon:otherForm  :color_of_127_plural ;
  lemon:sense          :color_of_127_sense_1 ;
  lemon:sense          :color_of_127_sense_2 ;
  lemon:synBehavior    :color_of_127_nounpp .

:color_of_127_form a lemon:Form ;
  lemon:writtenRep "color"@en .

:color_of_127_singular a    lemon:Form ;
  lemon:writtenRep "color"@en ;
  lexinfo:number   lexinfo:singular .

:color_of_127_plural a   lemon:Form ;
  lemon:writtenRep "colors"@en ;
  lexinfo:number    lexinfo:plural .

:color_of_127_nounpp a        lexinfo:NounPPFrame ;
  lexinfo:copulativeArg        :arg1_color_of_127 ;
  lexinfo:prepositionalAdjunct :arg2_color_of_127 .

:color_of_127_sense_1 a lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping         :color_of_127_sense_1 ;
  lemon:reference           <http://www.w3.org/1999/02/22-rdf-syntax-ns#type> ;
  lemon:subjOfProp          :arg2_color_of_127 ;
  lemon:objOfProp           :arg1_color_of_127 ;
  lemon:condition           :color_of_127_sense_1_condition .

:color_of_127_sense_1_condition a lemon:condition ;
  lemon:propertyDomain  <http://dbpedia.org/ontology/Color> ;
  lemon:propertyRange   <http://dbpedia.org/ontology/Color> .

:color_of_127_sense_2 a lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping         :color_of_127_sense_2 ;
  lemon:reference           <http://www.w3.org/1999/02/22-rdf-syntax-ns#type> ;
  lemon:subjOfProp          :arg2_color_of_127 ;
  lemon:objOfProp           :arg1_color_of_127 ;
  lemon:condition           :color_of_127_sense_2_condition .

:color_of_127_sense_2_condition a lemon:condition ;
  lemon:propertyDomain  <http://dbpedia.org/ontology/Colour> ;
  lemon:propertyRange   <http://dbpedia.org/ontology/Colour> .

:arg2_color_of_127 lemon:marker :color_of_127_form_preposition .
## Prepositions ##
:color_of_127_form_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "of"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

