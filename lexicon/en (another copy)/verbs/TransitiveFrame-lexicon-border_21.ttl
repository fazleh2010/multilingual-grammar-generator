@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :to_border_21 ;
  lemon:entry    :border_21ed ;
  lemon:entry    :form_border_21_preposition .

:to_border_21 a           lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_border_21 ;
  lemon:otherForm      :form_border_21s ;
  lemon:otherForm      :form_border_21ed ;
  lemon:otherForm      :form_border_21perfect ;
  lemon:sense          :border_21_sense_1 ;
  lemon:synBehavior    :border_21_frame_transitive .

:form_border_21 a         lemon:Form ;
  lemon:writtenRep     "border"@en ;
  lexinfo:verbFormMood lexinfo:infinitive .

:form_border_21s a    lemon:Form ;
  lemon:writtenRep "borders"@en ;
  lexinfo:person   lexinfo:secondPerson .

:form_border_21ed a   lemon:Form ;
  lemon:writtenRep "bordered"@en ;
  lexinfo:tense    lexinfo:past .

:form_border_21perfect a   lemon:Form ;
  lemon:writtenRep "bordered"@en ;
  lexinfo:tense    lexinfo:perfect ;
  lexinfo:person   lexinfo:thirdPerson .

:border_21_frame_transitive a lexinfo:TransitiveFrame ;
  lexinfo:subject          :border_21_subj ;
  lexinfo:directObject     :border_21_obj .

:border_21_sense_1 a   lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :border_21_sense_1 ;
  lemon:reference   <http://dbpedia.org/property/borderingstates> ;
  lemon:subjOfProp  :border_21_obj ;
  lemon:objOfProp   :border_21_subj ;
  lemon:condition   :border_21_sense_1_condition .


:border_21_sense_1_condition a    lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/State> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/State> .


:border_21_obj lemon:marker :form_border_21_preposition .

## Prepositions ##
:form_border_21_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "by"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

