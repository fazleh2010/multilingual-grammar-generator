@prefix :        <http://localhost:8080/#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .
@prefix oils:     <http://lemon-model.net/oils#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :heavy_1_53 ;
  lemon:entry    :form_heavy_1_53_preposition ;
  lemon:entry    :heavy_1_53_res .

:heavy_1_53 a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:adjective ;
  lemon:canonicalForm  :form_heavy_1_53 ;
  lemon:otherForm      :form_heavy_1_53_comperative ;
  lemon:otherForm      :form_heavy_1_53_superlative ;
  lemon:sense          :heavy_1_53_sense_1 ;
  lemon:synBehavior    :heavy_1_53_predFrame .

:form_heavy_1_53 lemon:writtenRep "heavy"@en .

:form_heavy_1_53_comperative lemon:writtenRep "heavier"@en .

:form_heavy_1_53_superlative lemon:writtenRep "heaviest"@en .

:heavy_1_53_predFrame a        lexinfo:AdjectiveSuperlativeFrame ;
  lexinfo:copulativeSubject :heavy_1_53_PredSynArg .

:heavy_1_53_sense_1 a  lemon:LexicalSense ;
  lemon:reference :heavy_1_53_res ;
  lemon:isA       :heavy_1_53_PredSynArg ;
  lemon:condition :heavy_1_53_sense_1_condition .

:heavy_1_53_res a   oils:CovariantScalar ;
  oils:boundTo  <http://dbpedia.org/ontology/mass> ;
  oils:degree   <http://lemon-model.net/oils/high> .

:heavy_1_53_sense_1_condition a lemon:condition ;
  lemon:propertyDomain   <http://dbpedia.org/ontology/Place> ;
  lemon:propertyRange    <http://www.w3.org/2001/XMLSchema#double> .

## Prepositions ##
:form_heavy_1_53_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "in"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

